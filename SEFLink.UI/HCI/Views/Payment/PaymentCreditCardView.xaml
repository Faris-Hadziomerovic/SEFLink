<UserControl x:Class="SEFLink.UI.HCI.Views.Payment.PaymentCreditCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SEFLink.UI.HCI.Views.Payment" xmlns:payment="clr-namespace:SEFLink.UI.HCI.ViewModels.Payment" d:DataContext="{d:DesignInstance Type=payment:PaymentCreditCardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!--#region Navigate Back Button code snippet-->
        <Grid x:Key="NavigateBackButtonContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Image Style="{DynamicResource Other.BackIcon}"
                   Height="40"
                   Width="40"/>

        </Grid>
        <!--#endregion-->
        
        <!--#region Credit Card Button code snippet-->
        <Grid x:Key="CreditCardButtonContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>


                <Image Style="{DynamicResource Menu.CreditCardIcon}"/>

                <TextBlock Text="{Binding CreditCardText}"
                           Grid.Row="1"
                           VerticalAlignment="Center"                       
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="DemiBold"/>

            </Grid>
        <!--#endregion-->
        
    </UserControl.Resources>
    
    <Grid>
            
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>       <!-- Margin -->
            <ColumnDefinition Width="auto"/>   
            <ColumnDefinition Width="*"/>       <!-- Margin -->
        </Grid.ColumnDefinitions>

        <Button Style="{DynamicResource BackButtonStyle}"
                 Content="{StaticResource NavigateBackButtonContent}"
                 Command="{Binding NavigateBackCommand}"/>


        <Button Command="{Binding NavigateToCreditCardCommand}" 
                    Style="{DynamicResource MenuButtonStyle}"
                    Grid.Column="1"
                    Visibility="{Binding CreditCardIsVisible, Converter={StaticResource BoolToVisibility}}"
                    Content="{StaticResource CreditCardButtonContent}"/>
                
    </Grid>
    
</UserControl>
