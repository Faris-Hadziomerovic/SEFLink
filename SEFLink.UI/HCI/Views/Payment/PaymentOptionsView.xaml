<UserControl x:Class="SEFLink.UI.HCI.Views.Payment.PaymentOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SEFLink.UI.HCI.Views.Payment" 
             xmlns:payment="clr-namespace:SEFLink.UI.HCI.ViewModels.Payment" 
             d:DataContext="{d:DesignInstance Type=payment:PaymentOptionsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!--#region Cancel Checkout Button code snippet-->
        <Grid x:Key="CancelCheckoutButtonContent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Image Style="{DynamicResource Other.BackIcon}"
                   Height="40"
                   Width="40"
                   />

        </Grid>
        <!--#endregion-->

        <!--#region Cash Button code snippet-->
        <Grid x:Key="CashButtonContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>


                <Image Style="{DynamicResource Menu.CashIcon}"/>

                <TextBlock Text="{Binding CashText}"
                           Grid.Row="1"
                           VerticalAlignment="Center"                       
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="DemiBold"/>

            </Grid>
        <!--#endregion-->

        <!--#region Credit Card Button code snippet-->
        <Grid x:Key="CreditCardButtonContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.7*"/>
                </Grid.RowDefinitions>


                <Image Style="{DynamicResource Menu.CreditCardIcon}"/>

                <TextBlock Text="{Binding CreditCardText}"
                           Grid.Row="1"
                           VerticalAlignment="Center"                       
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="DemiBold"/>

            </Grid>
        <!--#endregion-->
        
    </UserControl.Resources>
    
    <Grid>

        <!--region Cancel Checkout Button -->
        <Button Style="{DynamicResource BackButtonStyle}"
                Content="{StaticResource CancelCheckoutButtonContent}"
                Command="{Binding CancelCheckoutCommand}"/>
        <!--endregion-->

        <!--region Info message -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>       <!-- Margin -->
                <RowDefinition Height="auto"/>      <!-- Content -->
                <RowDefinition Height="5*"/>       <!-- Margin -->
            </Grid.RowDefinitions>
            
            <TextBlock Text="{Binding InfoText, FallbackValue=How do you want to pay?}" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30" 
                       FontWeight="DemiBold"
                       Grid.Row="1"/>
            
        </Grid>
        <!--endregion-->

        <!--region Content-->
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>       <!-- Margin -->
                <ColumnDefinition Width="auto"/>    <!-- Cash Button -->
                <ColumnDefinition Width="90"/>      <!-- Separator -->
                <ColumnDefinition Width="auto"/>    <!-- Credit Card Button -->
                <ColumnDefinition Width="*"/>       <!-- Margin -->
            </Grid.ColumnDefinitions>


            <Button Command="{Binding NavigateToCashCommand}" 
                    Style="{DynamicResource MenuButtonStyle}"
                    Grid.Column="1"
                    Visibility="{Binding CashIsVisible, Converter={StaticResource BoolToVisibility}}"
                    Content="{StaticResource CashButtonContent}"/>

            <Button Command="{Binding NavigateToCreditCardCommand}" 
                    Style="{DynamicResource MenuButtonStyle}"
                    Grid.Column="3"
                    Visibility="{Binding CreditCardIsVisible, Converter={StaticResource BoolToVisibility}}"
                    Content="{StaticResource CreditCardButtonContent}"/>

        </Grid>
        <!--endregion-->
        
        
    </Grid>
</UserControl>
